{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@test/*": [
        "test/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@models/*": [
        "src/models/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
